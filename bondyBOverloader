public class bondyBOverloader extends bondyBTheBuilder
{

    // Overloaded version of method2 with a single string argument
    public void method2( String str )
    {

        System.out.printf( "%s\n", "Hello I am the Overloader" );

    } // End of public void method2( String str )


    // Optional method to demonstrate both versions
    public void showOverloaderStuff()
    {

        // This calls the original method2 from the super class
        method2( "One", "Two" );

        // This calls the overloaded method2 in THIS class 
        method2( "Just me" );

    } // End of public void showOverloaderStuff()

} // End of public class bondyBOverloader extends bondyBTheBuilder
